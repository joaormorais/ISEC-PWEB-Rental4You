@model IEnumerable<Rental4You.Models.Vehicle>

@{
    ViewData["Title"] = "Início";
}

<h1>Lista de veículos:</h1>

<p>
    <a asp-action="Create">Criar um novo veículo</a>
</p>

<div>
    <form action="/Vehicles/Search" method="post">
        <input type="text" name="TextToSearchName" placeholder="Nome do veículo">
        <input type="text" name="TextToSearchLocation" placeholder="Localização do veículo">
        <input type="text" name="TextToSearchCompany" placeholder="Empresa a alugar">
        <input type="submit" value="Procurar" asp-action="Search"/>
    </form>
</div>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#"
       role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Filtrar por tipo
    </a>
    <ul class="dropdown-menu">

        @foreach (var group in Model.GroupBy(i => i.Type))
        {
            <li>
                <a class="dropdown-item" asp-action="Index" asp-route-filter=@group.Key>@group.Key</a>
            </li>
        }

    </ul>
</li>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#"
       role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Filrar por empresa a alugar
    </a>
    <ul class="dropdown-menu">

        @foreach (var group in Model.GroupBy(i => i.Company))
        {
            <li>
                <a class="dropdown-item" asp-action="Index" asp-route-filter=@group.Key>@group.Key</a>
            </li>
        }

    </ul>
</li>

<li>
    <a class="dropdown-item" asp-action="Index">Remover filtros</a>
</li>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#"
       role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Ordenar por
    </a>
    <ul class="dropdown-menu">

        <li>
            <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="price_up">Preço ascendente</a>
        </li>

        <li>
            <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="price_down">Preço descendente</a>
        </li>

    </ul>
</li>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
