@model Rental4You.Models.Vehicle

@{
    ViewData["Title"] = "Detalhes";
}
<body style="background-image:url('/img/veiculos.png');">
<h1>A visualizar detalhes de um veículo...</h1>

<div>
    <h4>Veículo:</h4>
    <hr />
        <dl class="row" style="width:600px; position:relative; left:34%; padding:0 20px;">
            <dt class="col-sm-2" style="margin-top:10px;">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
            <dd class="col-sm-10" style="margin-top:10px;">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Available)
        </dt>
            <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Available)
        </dd>
            <div style="margin-bottom:10px;">
    @if (User.IsInRole("Employee"))
    {
       @foreach (var item in ViewBag.ListOfCompaniesAssociatedToEmployee)
        {
            if (item.Id == @Model?.CompanyId)
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" style="color:darkblue">Editar</a>
            }
        } 
    }
    <a asp-action="Index"  style="color:darkblue">Voltar</a>
</div>
    </dl>
</div>

</body>