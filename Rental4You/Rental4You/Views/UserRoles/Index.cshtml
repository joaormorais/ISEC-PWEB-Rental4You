@using Rental4You.Models
@model IEnumerable<Rental4You.ViewModels.UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
}
<h1>User Roles</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Primeiro nome</th>
            <th>Último nome</th>
            <th>Email</th>
            <th>Permissões</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary"
                   asp-controller="UserRoles"
                   asp-action="Details"
                   asp-route-userId="@user.UserId">Atribuir permissões</a>
                </td>
            </tr>
        }
    </tbody>
</table>