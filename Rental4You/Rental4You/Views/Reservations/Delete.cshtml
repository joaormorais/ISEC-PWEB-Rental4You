@model Rental4You.Models.Reservation

@{
    ViewData["Title"] = "Apagar";
}
<body style="background-image:url('/img/reservas.jpg'); ">
    <h1 style="color:white;">A apagar uma reserva....</h1>

    <h3 style="color:white;">Tem a certeza que quer apagar esta reserva?</h3>
<div>
        <h4 style="color:white;">Reserva:</h4>
    <hr />
        <dl class="row" style="width:600px; position:relative; left:34%; padding:0 20px;">
            <dt class="col-sm-2" style="margin-top:10px;">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
            <dd class="col-sm-10" style="margin-top:10px;">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Confirmed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Confirmed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KmsStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KmsStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DamageStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DamageStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ObservationsStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObservationsStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KmsEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KmsEnd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DamageEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DamageEnd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ObservationsEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObservationsEnd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DamageImages)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DamageImages)
        </dd>
    </dl>
    <div style="position:relative; left:34%">
    <form asp-action="Delete" >
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" style="color:darkblue">Voltar</a>
    </form>
    </div>
</div>
</body>