@model Rental4You.Models.Company

@{
    ViewData["Title"] = "Detalhes";
}

<h1>A visualizar detalhes de uma empresa...</h1>

<div>
    <h4>Empresa:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Acronym)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Acronym)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Available)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Available)
        </dd>

        <!-- meter aqui uma linha divisoria -->
        <dt class = "col-sm-2">
                Veículos associados:
            </dt>
        <dd class="col-sm-10">
        @foreach (Vehicle item in ViewBag.ListOfCarsCompany)
        {


                <a>@item.Name</a>   <a>|</a>
            
        }
        </dd>

        <!-- meter aqui uma linha divisoria -->
        <dt class="col-sm-2">
            Funcionários associados:
        </dt>
        <dd class="col-sm-10">
        @foreach (var item in ViewBag.listOfEmployeesAssociatedName)
        {

                <a>@item</a>   <a>|</a>
            
        }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
