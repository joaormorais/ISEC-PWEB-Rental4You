@model Rental4You.Models.Company

@{
    ViewData["Title"] = "Apagar";
}

<h1>A apagar uma empresa...</h1>

<h3>Tem a certeza que quer apagar esta empresa?</h3>
<div>
    <h4>Empresa:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Acronym)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Acronym)
        </dd>
        <dt class = "col-sm-2">
